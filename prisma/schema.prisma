generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./ticketshop.db"
}

model Funds {
  id            Int     @id @default(autoincrement())
  resourceId    String @unique
  cf            String
  users         Users[]
  dfs           Dfs[]
  settings      Settings[]
}

model Users {
  id            Int     @id @default(autoincrement())
  sciper        Int @unique
  createdAt     DateTime @default(now())
  funds         Funds[]
  dfs           Dfs[]
  settings      Settings[]
}

model Dfs {
  id            Int     @id @default(autoincrement())
  requestID     Int
  name          String
  user          Users[]
  dates         String
  destination   String
  fund          Funds[]
  settings      Settings[]
}

model Settings {
  id            Int     @id @default(autoincrement())
  shown         Boolean @default(true)
  user          Users   @relation(fields: [userId], references: [id])
  userId        Int
  dfId          Int?
  df            Dfs?    @relation(fields: [dfId], references: [id])
  fundId        Int?
  fund          Funds?  @relation(fields: [fundId], references: [id])
}