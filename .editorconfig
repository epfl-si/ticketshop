root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
quote_type = double

[*.{,yml,yaml,md}]
indent_style = space
indent_size = 2

[*.{js,json,jsx,ts,tsx}]
indent_style = tab
indent_size = 4

[package.json]
indent_style = space
indent_size = 2
